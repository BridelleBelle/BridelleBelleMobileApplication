<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BridelleBelleMobileApplication.PageViewer"
             xmlns:custom="clr-namespace:PageViewer.Controls;assembly=PageViewer"
             x:Name="ThePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=""></RowDefinition>
                <RowDefinition Height="128"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Source="cover.jpg" Grid.Row=""></Image>

            <custom.ImageGallery ItemsSource="{Binding Image}" Grid.Row="1">
                <DataTemplate>
                    <Image x:Name="bigimg" Source="cover.jpg" Aspect="AspectFit">
                        <Label Text="niggaz"></Label>
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                command="{Binding Path=BindingContext.PreviewImageCommand,Source={x:Reference ThePage}}"
                                commandParameter="{Binding ImageId}"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>
                </DataTemplate>
            </custom.ImageGallery>
        </Grid>
    </ContentPage.Content>
</ContentPage>